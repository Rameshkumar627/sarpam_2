<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--form view-->
    <record model="ir.ui.view" id="view_patient_patient_form">
        <field name="name">patient.patient.form</field>
        <field name="model">patient.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>

                    <separator string="Patient Database" style="text-align:center;"/>

                    <field name="id" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;active&quot;}"/>
                            </button>
                        </div>
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;}"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" required="1"/></h1>
                            <field name="patient_uid" invisible="1"/>
                            <label for="patient_uid" class="oe_edit_only"/>
                            <h2><field name="patient_uid"/></h2>
                        </div>

                    <!--Notebook Pages-->
                    <notebook>

                        <page string="Personal Information">
                            <group col="4">
                                <field name="date_of_birth"/>
                                <field name="age"/>
                                <field name="sex"/>
                                <field name="marital_status"/>
                                <field name="blood_group"/>
                                <field name="allergic_towards"/>
                                <field name="emergency_contact"/>
                            </group>

                            <field name="contact_address"/>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!--tree view-->
    <record model="ir.ui.view" id="view_patient_patient_tree">
    <field name="name">patient.patient.tree</field>
    <field name="model">patient.patient</field>
    <field name="arch" type="xml">
        <tree string="Patient">
            <field name="patient_uid"/>
            <field name="name"/>
        </tree>
    </field>
    </record>


    <!--action-->
    <record model="ir.actions.act_window" id="action_patient_patient">
        <field name="name">Patient</field>
        <field name="res_model">patient.patient</field>
        <field name="view_type">form</field>
        <field name="limit">80</field>
        <field name="view_mode">tree,form</field>
    </record>

    
</odoo>